@model IEnumerable<Project_try3.Models.Orders>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var cartFlag = 0;
    if (TempData["cartFlag"] != null)
    {
        cartFlag = 1;
    }
}

<h2 class="text-center">我的訂單</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Payed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GroupBuying.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Members.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PayType.Method)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Payed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GroupBuying.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Members.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PayType.Method)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.ID }) |*@
                @Html.ActionLink("詳細清單", "ODetails", "Orderdetails", new { orderID = item.ID }, null) |
                @Html.ActionLink("刪除", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
<script>
    if (@cartFlag===1)
    {
        localStorage.removeItem("cart")
    }
</script>