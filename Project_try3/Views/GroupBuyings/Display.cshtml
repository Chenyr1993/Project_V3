@model IEnumerable<Project_try3.Models.GroupBuying>

@{
    ViewBag.Title = "Display";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center pt-2 pb-2">我的團購訂單</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table  table-hover align-middle table-striped">
    <thead class="">
        <tr>

            <th>
                團購單號
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Startdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.CloseDate)
            </th>

            <th>
                開團中
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Stores.Name)
            </th>
            <th class="col-md-2 col-sm-1">管理團購</th>
        </tr>
    </thead>
    <tbody class="">

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Startdate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.CloseDate)
                </td>

                <td>
                    @*@Html.DisplayFor(modelItem => item.Continued)*@
                    @if (item.Continued)
                    {
                        <h5 class="bi bi-toggle-on text-success " title="開團中" data-toggle="tooltip" data-placement="right"></h5>
                    }
                    else
                    {
                        <h5 class="bi bi-toggle-off text-danger " title="已關團" data-toggle="tooltip" data-placement="right"></h5>
                    }
                </td>

                <td >
                    @Html.DisplayFor(modelItem => item.Stores.Name)
                </td>
                <td class=" font-weight-bold ">
                    @Html.ActionLink("\n", "Details", new { id = item.ID }, new { @class= "bi bi-layout-text-sidebar-reverse" }) 
                    @Html.ActionLink("\n", "Edit", new { id = item.ID }, new {@class= " text- bi bi-pencil-square text-secondary" }) 
                    @Html.ActionLink("\n", "Delete", new { id = item.ID }, new { @class= "text-danger bi bi-trash3-fill" })
                    @Html.ActionLink("\n","MenuforGP", "Home", new { storeSN = item.StoreSN, GPID = item.ID }, new { @class = "text-primary bi bi-bag-plus" }) 
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })
</script>