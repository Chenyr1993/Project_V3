@{
    string str = "", action = "";
    str = Session["user"] == null ? "登入" : "登出";
    action = Session["user"] == null ? "Login" : "Logout";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -饗訂訂餐網</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    @RenderSection("css", false)
</head>
<body class="pt-3">
    <nav class="navbar navbar-expand-lg navbar-light fixed-top bg-info shadow">
        <div class="container">
            <a href="@Url.Action("Index","Home")" class="navbar-brand d-flex">
                @*<img src="~/Images/logo.png" width="30" height="50" class="d-inline-block align-top mr-1" alt="響訂Logo">*@
                <span class="align-items-center">響訂</span>
            </a>
            @*@Html.ActionLink("饗訂", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarContent " aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse " id="navbarContent">

                <ul class="navbar-nav ">

                    @*<li class="nav-item">@Html.ActionLink("商店", "Index", "Home", null, new { @class = "nav nav-link" })</li>*@
                    @if (Session["user"] != null)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-expanded="false">會員專區</a>
                            <div class="dropdown-menu">
                                @Html.ActionLink("個人資料管理", "Index", "Members", new { area = "" }, new { @class = "dropdown-item  " })
                                @Html.ActionLink("我的團購紀錄", "Display", "GroupBuyings", new { area = "" }, new { @class = "dropdown-item  " })
                                @Html.ActionLink("我的訂單紀錄", "IndexforGP", "Orders", new { area = "" }, new { @class = "dropdown-item  " })
                                
                            </div>
                        </li>
                        <li class="nav-item">@Html.ActionLink("評論區", "Index", "Comments", null, new { @class = "nav nav-link" })</li>
                    }
                    <!--<li class="nav-item">-->@*@Html.ActionLink("常見問題", "Index", "Home", null, new { @class = "nav nav-link" })*@<!--</li>-->

                    <li class="nav-item  ">@Html.ActionLink(str, action, "Login", null, new { @class = " btn btn-warning " })</li>
                    <li class="nav-item ml-2 ">@Html.ActionLink("註冊", "Create", "Members", null, new { @class = " btn btn-primary " })</li>
                </ul>





            </div>

        </div>
    </nav>

    <div class="container body-content pt-5">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 饗訂訂餐網</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    @RenderSection("script", false)


</body>
</html>