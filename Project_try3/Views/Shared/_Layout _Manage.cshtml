<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -饗訂訂餐網</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    @RenderSection("css",false)
</head>
<body class="mt-3">
    <nav class="navbar navbar-expand-lg navbar-light fixed-top bg-secondary shadow">
        <div class="container">

            @Html.ActionLink("饗訂後台作業系統", "Index", "Stores", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarContent " aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse " id="navbarContent">

                <ul class="navbar-nav mr-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-expanded="false">商店資料管理</a>
                        <div class="dropdown-menu">
                            @Html.ActionLink("會員資料管理", "Manager", "Members", null, new { @class = "nav-link" })
                            @Html.ActionLink("會員問題管理", "Manager", "Manage", null, new { @class = "nav-link" })
                        </div>
                            </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-expanded="false">店鋪資料管理</a>
                        <div class="dropdown-menu">
                            @Html.ActionLink("店家資料管理", "Index", "Stores", null, new { @class = "dropdown-item " })
                            @Html.ActionLink("商品資料管理", "Index", "Products", null, new { @class = "dropdown-item " })
                            @Html.ActionLink("商品種類管理", "Index", "Categories", null, new { @class = "dropdown-item " })
                    </div>
                    </li>
                    <li class="nav-item dropdown ">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-expanded="false">平台設定管理</a>
                        <div class="dropdown-menu">

                            @Html.ActionLink("使用者列表", "Index", "Users", new { area = "" }, new { @class = "dropdown-item  " })

                            @Html.ActionLink("管理員列表", "Index", "Admins", new { area = "" }, new { @class = "dropdown-item  " })

                            @Html.ActionLink("常見問題種類", "Index", "ProblemType", new { area = "" }, new { @class = "dropdown-item " })


                        </div>
                    </li>
                    @*<li class="nav-item mr-3">@Html.ActionLink("登入", "Login", "Login", null, new { @class = " btn btn-warning " })</li>*@
                    <li class="nav-item m1-auto">@Html.ActionLink("登出", "Logout", "Login", null, new { @class = " btn btn-danger" })</li>
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>




            </div>

        </div>
    </nav>

    <div class="container body-content pt-5">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year -饗訂訂餐網</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("script",false)

</body>
</html>