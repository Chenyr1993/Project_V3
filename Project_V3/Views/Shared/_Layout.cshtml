<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <style>
        body {
            padding-top: 70px;
        }
    </style>
    
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light fixed-top bg-secondary">
        <div class="container">

            @Html.ActionLink("饗訂後台作業系統", "Index", "AdminLogin", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarContent " aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse " id="navbarContent">
                @*@if (Session["admin"] != null)
                    {*@
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">@Html.ActionLink("會員資料管理", "Index", "Members",null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("店家資料管理", "Index", "Home", null,new { @class = "nav-link" })</li>
                    <li class="nav-item dropdown ">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-expanded="false">平台設定管理</a>
                        <div class="dropdown-menu">

                            @Html.ActionLink("使用者列表", "Index", "Users", new { area = "" }, new { @class = "dropdown-item  " })

                            @Html.ActionLink("管理員列表", "Index", "Admins", new { area = "" }, new { @class = "dropdown-item  " })

                            @Html.ActionLink("test", "Index", "Home", new { area = "" }, new { @class = "dropdown-item " })


                        </div>
                    </li>
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>
                @*<div>@Html.ActionLink("登出", "Logout", "VMLogin", null, new { @class = " btn btn-danger" })</div>
                    }*@



            </div>

        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="text-center mb-lg-5">
            <p>&copy; @DateTime.Now.Year - 饗訂平台系統</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>

    @RenderSection("script", false)
    @*@RenderSection("css", false)*@

</body>
</html>